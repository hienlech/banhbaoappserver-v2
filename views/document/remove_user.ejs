<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Remove Account</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    </body>
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card border-0 rounded-lg pt-4">
                    <center><h2>Delete Account</h2></center>
                    <div class="card-body">
                        <form id="getcodePanel" action="#" method="POST">
                            <div class="form-floating mb-3"><input id="email"
                                    class="form-control bg-transparent text-white" name="email" type="email"
                                    placeholder="email" /> 
                                </div>
                            <div class="mt-4 mb-0">
                                <div class="d-grid"><button class="btn btn-primary btn-block"
                                        type="submit">Submit</button></div>
                            </div>
                        </form>
                        <form id="confirmPanel" action="#" method="POST">
                            <div class="form-floating mb-3"><input id="code"
                                    class="form-control bg-transparent text-white" name="code" placeholder="code" type="text" /> </div>
                            <div class="mt-4 mb-0">
                                <div class="d-grid"><button class="btn btn-primary btn-block"
                                        type="submit">Submit</button></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-2.2.2.js"
        integrity="sha256-4/zUCqiq0kqxhZIyp4G0Gk+AOtCJsY1TA00k5ClsZYE=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    <script>

        $(document).ready(function () {

            var $getcode = $("#getcodePanel");
            var $confirm = $("#confirmPanel").hide();
            var email = '';
            var code = '';

            function submitEmail(emaildata) {
                $.ajax({
                    url: "/api/user/getcode",
                    type: "POST",
                    data: JSON.stringify(emaildata),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data, textStatus, jqXHR) {
                        $getcode.hide();
                        $confirm.show();
                        email = emaildata.email;
                        console.log('-----------success email :', email);
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        if (jqXHR.status === 404) {
                            console.log('-----------fail 404----------------');
                        }
                        else {

                        }
                    }
                });
            }
            function submitCode(codedata) {
                $.ajax({
                    url: "/api/user/remove",
                    type: "POST",
                    data: JSON.stringify(codedata),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data, textStatus, jqXHR) {
                        console.log('-----------success----------------');
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.log('-----------fail----------------');
                    }
                });
            }

            $("#getcodePanel").submit(function (event) {
                event.preventDefault();

                var $form = $(this);
                var formData = {
                    username: $form.find('input[name="email"]').val()
                };

                submitEmail(formData);
            });
            $("#confirmPanel").submit(function (event) {
                event.preventDefault();

                var $form = $(this);
                var formData = {
                    code: $form.find('input[name="code"]').val()
                };

                submitCode(formData);
            });
        })
    </script>
</body>

</html>